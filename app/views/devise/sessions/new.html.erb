<div class="sign-in-background" style="text-align: center;">
  <div class="todoapp-main-logo">
    <h1 class="todoapp-logo">ToDoApp</h1>
  </div>

  <section class="inner-section">
    <div class="section-wrapper">
      <div class="account-form">
        <h1>ToDoAppにログイン</h1>
        <div class="login-password-container">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="login-password-container-email">
            <div class="email-password-login">
              <div class="email-password">
                <div class="field">
                  <%#= f.label :email, class: "form-label" %>
                  <%= f.email_field :email, class: "form-field", autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力" %>
                </div>

                <div class="field">
                  <%#= f.label :password, class: "form-label" %>
                  <%= f.password_field :password, class: "form-field", autocomplete: "current-password", placeholder: "パスワードを入力" %>
                </div>
              </div>
            </div>

            <%# if devise_mapping.rememberable? %>
            <%# <div class="field"> %>
              <%#= f.check_box :remember_me %>
              <%#= f.label :remember_me %>
            <%# </div> %>
            <%# end %>

            <div class="actions">
              <%= f.submit t('devise.sessions.new.sign_in'), class: "account-button" %>
            </div>
            <% end %>
          </div>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
</div>